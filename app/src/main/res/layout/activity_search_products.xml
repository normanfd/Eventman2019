<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".View.User.SearchProductsActivity">

    <RelativeLayout
            android:id="@+id/r5"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorPrimaryDark"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
    >
        <EditText
                android:id="@+id/search_product_name"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:hint="Klik kategori terlebih dahulu"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@android:color/white"
                android:padding="9dp"
                android:layout_marginStart="9dp"
                android:layout_centerVertical="true"
        />
        <Button
                android:id="@+id/search_btn"
                android:layout_toRightOf="@+id/search_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@color/colorPrimaryDark"
                android:padding="9dp"
                android:layout_centerInParent="true"
        />
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/r6"
            android:layout_below="@+id/r5"
    >
        <Button
                android:id="@+id/konveksi_btn_home"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="Konveksi"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
        />
        <Button
                android:id="@+id/logistik_btn_home"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="Logistik"
                android:layout_centerHorizontal="true"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
        />
        <Button
                android:id="@+id/konsumsi_btn_home"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="Konsumsi"
                android:layout_alignParentRight="true"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
        />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/search_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/r6">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>